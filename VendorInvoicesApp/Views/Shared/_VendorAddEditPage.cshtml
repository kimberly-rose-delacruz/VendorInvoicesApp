@model Vendor


<div class="text-danger" asp-validation-summary="ModelOnly"></div>

<div class="form-group row">

    <div class="col-sm-2"><label>Name:</label></div>
    <div class="col-sm-4">
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="col-sm-6">
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-2"><label>Address 1:</label></div>
    <div class="col-sm-4">
        <input type="text" asp-for="Address1"
               class="form-control" />
    </div>
    <div class="col-sm-6">
        <span asp-validation-for="@Model.Address1" class="text-danger"></span>
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-2"><label>Address 2:</label></div>
    <div class="col-sm-4">
        <input type="text" asp-for="@Model.Address2"
               class="form-control" />
    </div>
    <div class="col-sm-6">
        <span asp-validation-for="@Model.Address2" class="text-danger"></span>
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-2"><label>City:</label></div>
    <div class="col-sm-4">
        <input type="text" asp-for="City"
               class="form-control" />
    </div>
    <div class="col-sm-6">
        <span asp-validation-for="@Model.City" class="text-danger"></span>
    </div>
</div>


<div class="form-group row">
    <div class="col-sm-2"><label>Province/State:</label></div>
    <div class="col-sm-4">
        <input type="text" asp-for="ProvinceOrState"
               class="form-control" />
    </div>
    <div class="col-sm-6">
        <span asp-validation-for="@Model.ProvinceOrState" class="text-danger"></span>
    </div>
</div>


<div class="form-group row">
    <div class="col-sm-2"><label>Zip/postal code:</label></div>
    <div class="col-sm-4">
        <input type="text" asp-for="ZipOrPostalCode"
               class="form-control" />
    </div>
    <div class="col-sm-6">
        <span asp-validation-for="@Model.ZipOrPostalCode" class="text-danger"></span>
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-2"><label>Phone: </label></div>
    <div class="col-sm-4">
        <input type="text" asp-for="VendorPhone"
               class="form-control" />
    </div>
    <div class="col-sm-6">
        <span asp-validation-for="VendorPhone" class="text-danger"></span>
    </div>
</div>

<input type="hidden" asp-for="VendorId"/>


<div class="form-group row">
    <div class="col-sm-2"><label>Contact first name: </label></div>
    <div class="col-sm-4">
        <input type="text" asp-for="VendorContactFirstName"
               class="form-control" />
    </div>
    <div class="col-sm-6">
        <span asp-validation-for="@Model.VendorContactFirstName" class="text-danger"></span>
    </div>
</div>


<div class="form-group row">
    <div class="col-sm-2"><label>Contact last name: </label></div>
    <div class="col-sm-4">
        <input type="text" asp-for="VendorContactLastName"
               class="form-control" />
    </div>
    <div class="col-sm-6">
        <span asp-validation-for="@Model.VendorContactLastName" class="text-danger"></span>
    </div>
</div>


<div class="form-group row">
    <div class="col-sm-2"><label>Contact email: </label></div>
    <div class="col-sm-4">
        <input type="text" asp-for="VendorContactEmail"
               class="form-control" />
    </div>
    <div class="col-sm-6">
        <span asp-validation-for="@Model.VendorContactEmail" class="text-danger"></span>
    </div>
</div>


