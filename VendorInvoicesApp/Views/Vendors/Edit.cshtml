@model Vendor

@{
    ViewData["Title"] = "Edit a vendor";
}

<!--Enabling pulling in extra javascript within an cshtml file to use in the validation scripts-->
@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

    <form asp-controller="Vendors" asp-action="ProcessEditVendorRequest" asp-route-id="@Model.VendorId" enctype="application/x-www-form-urlencoded">
        <partial name="_VendorAddEditPage" />
        <div>
            <div>
                <button type="submit" class="btn btn-primary">Edit</button>
                @if(ViewBag.FilterIndex == 1)
                {
                <a asp-controller="Vendors" asp-action="GetAllVendors" asp-route-filterIndex="1" class="btn btn-primary">Cancel</a>
                }
                else if(ViewBag.FilterIndex==2)
                {
                <a asp-controller="Vendors" asp-action="GetAllVendors" asp-route-filterIndex="2" class="btn btn-primary">Cancel</a>
                }
                else if(ViewBag.FilterIndex==3)
                {
                <a asp-controller="Vendors" asp-action="GetAllVendors" asp-route-filterIndex="3" class="btn btn-primary">Cancel</a>
                }
                else
                {
                <a asp-controller="Vendors" asp-action="GetAllVendors" asp-route-filterIndex="4" class="btn btn-primary">Cancel</a>
                }
            </div>
        </div>

    </form>